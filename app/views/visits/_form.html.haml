= simple_form_for(@visit) do |f|
  .form-group
    = f.label :price
    = f.text_field :price, class: "form-control"
  .form-group
    = f.label :description
    = f.text_field :description, class: "form-control"
  .form-group
    = f.label :start_visit
    / = f.text_field :start_visit, class: "form-control"
    .datetimepicker.input-group.date
      = f.text_field :start_visit, class: "form-control"
      %span.input-group-addon
        %span.glyphicon.glyphicon-calendar
  .form-group
    = f.label :end_visit
    .datetimepicker.input-group.date
      = f.text_field :end_visit, class: "form-control"
      %span.input-group-addon
        %span.glyphicon.glyphicon-calendar
  .form-group
    = f.label :patient_id
    / = f.text_field :patient_id, class: "form-control"
    = f.select 'patient_id', options_for_select(Patient.all.collect{ |patient| [patient.surname + " " + patient.name, patient.id]})
  .form-group
    = f.label :doctor_id
    / = f.text_field :doctor_id, class: "form-control"
    = f.select 'doctor_id', options_for_select(Doctor.all.collect{ |doctor| [doctor.surname + " " + doctor.name, doctor.id]})
  .form-group
    = f.submit "Submit", class: "btn btn-default"

= link_to "<-- Back", visits_path