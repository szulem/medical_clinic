%h1 All patients

%table.table
  %thead
    %tr
      %th Name
      %th Surname
      %th Age
      %th Actions

  %tbody
    - @patients.each do |patient|
      %tr
        %td= patient.name
        %td= patient.surname
        %td= patient.age
        %td
          = link_to 'Show', patient_path(patient), class: 'btn btn-primary btn-xs'
          = link_to 'Edit', edit_patient_path(patient), class: 'btn btn-warning btn-xs'
          = link_to 'Delete', patient_path(patient), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger btn-xs'

= link_to "Add new patient", new_patient_path